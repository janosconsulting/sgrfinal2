@model Mantenimiento.Negocio.Poco.GestionarClientePoco
@using Newtonsoft.Json


@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<style>
    .Ndocument-error {
        border: 1px solid red;
    }

        .Ndocument-error:focus {
            border: 1px solid red;
        }

    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 0.5rem 0.75rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.1);
        }

    .card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
    }

    .required::after {
        content: '*';
        color: #dc3545;
        margin-left: 2px;
    }
</style>
<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar pt-7 pt-lg-10">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
            <!--begin::Toolbar wrapper-->
            <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                    <!--begin::Title-->
                    <div class="d-flex align-items-center gap-3">
                        <i class="bi bi-file-earmark-plus fs-2 text-primary"></i>
                        <div>
                            <h1 class="page-heading text-dark fw-bold fs-3 m-0">
                                @(ViewBag.esEditar > 0 ? (ViewBag.esRenovacion == 2 ? "Renovar Suscripción" : "Editar Suscripción") : "Nueva Suscripción")
                            </h1>
                            <p class="text-muted fs-7 m-0 mt-1">
                                @(ViewBag.esEditar > 0 ? "Modifique los datos de la suscripción existente" : "Complete el formulario para crear una nueva suscripción")
                            </p>
                        </div>
                    </div>
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">
                            <a href="@Url.Action("Index","Subscripcion")" class="text-muted text-hover-primary">Suscripciones</a>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">@(ViewBag.esEditar > 0 ? (ViewBag.esRenovacion == 2 ? "Renovar" : "Editar") : "Nueva")</li>
                        <!--end::Item-->
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar wrapper-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-fluid">
            <!--begin::Form-->
            <form id="kt_add_cliente_form" class="form d-flex flex-column flex-lg-row">
                <!--begin::Main column-->
                <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                    <div class="d-flex flex-column gap-7 gap-lg-10">
                        <!--begin::General options-->
                        <div class="card card-flush py-4">
                            <!--begin::Card body-->
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label required">
                                                Cliente
                                            </label>
                                            <select class="form-select" id="cboClientes" @(ViewBag.esRenovacion == 2 ? "disabled" : "")>
                                                <option value="-1">Seleccione..</option>

                                                @foreach (var I in Model.listarClientes)
                                                {
                                                    <option value="@I.idPersona">@I.nombreCli</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label required">
                                                Servicio
                                            </label>
                                            <select class="form-select" id="cboServicios" @(ViewBag.esRenovacion == 2 ? "disabled" : "")>
                                                <option value="-1">Seleccione..</option>
                                                @foreach (var I in Model.ListarServicio)
                                                {
                                                    <option value="@I.idServicio">@I.nombre</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label required">
                                                Frecuencia
                                            </label>
                                            <select class="form-select" id="cboFrecuencia" onchange="CambioFrecuencia()">
                                                <option value="-1">Seleccione..</option>
                                                @foreach (var I in Model.ListarFrecuencia)
                                                {
                                                    <option value="@I.idFrecuencia" data-numdias="@I.numDias" data-aviso1="@I.aviso1" data-aviso2="@I.aviso2">
                                                        @I.nombre
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label required" for="kt_datepicker_fecha_ini">Fecha Inicio</label>
                                            <input type="text" id="kt_datepicker_fecha_ini" class="form-control" onchange="CambioFrecuencia()" placeholder="Seleccionar fecha de inicio" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label" for="kt_datepicker_fecha_fin">Fecha Vencimiento</label>
                                            <input type="text"
                                                   id="kt_datepicker_fecha_fin" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label required" for="txtImporte">Importe</label>
                                            <input type="text" id="txtImporte" class="form-control" placeholder="0.00" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label required" for="cboMoneda">Moneda</label>
                                            <select class="form-select" id="cboMoneda">
                                                <option value="-1">Seleccione..</option>
                                                @foreach (var I in Model.ListarMoneda)
                                                {
                                                    <option value="@I.idMoneda">@I.nombre</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label" for="txtAviso">Días Aviso</label>
                                            <input type="text" id="txtAviso" class="form-control" disabled />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label" for="cboEstados">Estado Suscripción</label>
                                            <select class="form-select" id="cboEstados">
                                                @if (ViewBag.esRenovacion == 2)
                                                {
                                                    <option value="1">Activo</option>
                                                }
                                                else
                                                {
                                                    <option value="1">Activo</option>
                                                    <option value="2">Suspendido</option>
                                                    <option value="3" disabled>Pagado</option>
                                                }

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-4 gx-1">
                                            <label class="form-label" for="txtObservacion">Observación</label>
                                            <input type="text" id="txtObservacion" class="form-control" placeholder="Notas adicionales (opcional)" />
                                        </div>
                                    </div>
                                    <div class="col-md-12 d-none" id="campo-hidden">
                                        <div class="row mb-5 gx-1">
                                            <span id="xCampo"></span>

                                        </div>
                                    </div>

                                </div>
                                <!--end::Card header-->
                            </div>
                            <!--end::General options-->
                        </div>
                        <!--end::Tab content-->
                        <div class="d-flex justify-content-end gap-3">
                            <!--begin::Button-->
                            <a href="@Url.Action("Index","Subscripcion")" id="kt_ecommerce_add_product_cancel" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Volver
                            </a>
                            <!--end::Button-->
                            <!--begin::Button-->
                            <button type="button" id="btnGuardar" onclick="Guardar();" class="btn btn-primary">
                                <span class="indicator-label">
                                    <i class="bi bi-save me-1"></i>Guardar
                                </span>
                                <span class="indicator-progress">
                                    <i class="bi bi-hourglass-split me-1"></i>Procesando...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                            <!--end::Button-->
                        </div>
                    </div>
                    <!--end::Main column-->
                </div>
            </form>
            <!--end::Form-->
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>
<!--end::Content wrapper-->

@section Scripts {
    <script src="@Url.Content("~/Scripts/library.js?v=5.0")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/metronic/plugins/custom/formrepeater/formrepeater.bundle.js")"></script>
    <style>
        /* Asegura que la imagen dentro de Dropzone tenga un tamaño máximo */
        #kt_dropzonejs_banner .dz-image img {
            max-width: 130px !important;
            max-height: 130px !important;
            object-fit: contain; /* Mantiene proporción */
        }
    </style>



    <script>
        var idEditar = 0;
        var isEditing = "";

        function Validar() {
            if ($("#cboClientes").val() == -1) {
                ShowMessage(0, "Debe seleccionar el Cliente");
                return false;
            }
            // Verificar si se ha ingresado un número de documento
            if ($("#cboServicios").val() == -1) {
                ShowMessage(0, "Debe seleccionar Servicio");
                return false;
            }
            if ($("#cboFrecuencia").val() == -1) {
                ShowMessage(0, "Debe seleccionar la Frecuencia");
                return false;
            }
            if ($("#kt_datepicker_fecha_ini").val() == "") {
                ShowMessage(0, "Debe ingresar la Fecha de Inicio");
                return false;
            }
            if ($("#kt_datepicker_fecha_fin").val() == "") {
                ShowMessage(0, "Debe ingresar la Fecha Vencimiento");
                return false;
            }
            if ($("#txtImporte").val() == "") {
                ShowMessage(0, "Debe ingresar el Importe");
                return false;
            }
            if ($("#cboMoneda").val() == -1) {
                ShowMessage(0, "Debe seleccionar la Moneda");
                return false;
            }
            if ($("#txtAviso").val() == "") {
                ShowMessage(0, "Debe ingresar el Nro de Días de Aviso");
                return false;
            }
            if ($("#cboEstados").val() == -1) {
                ShowMessage(0, "Debe seleccionar el Estado");
                return false;
            }
            return true;
        }
        function Guardar() {
             if (!Validar()) {
                 return false;
             }


             var formData = new FormData();

            formData.append('idSubscripcion', idEditar);
            formData.append('idCliente', $("#cboClientes").val());
            formData.append('idFrecuencia', $("#cboFrecuencia").val());
            formData.append('idServicio', $("#cboServicios").val());
            formData.append('fechaInicio', $("#kt_datepicker_fecha_ini").val());
            formData.append('fechaVcto', $("#kt_datepicker_fecha_fin").val());
            formData.append('importe', $("#txtImporte").val());
            formData.append('idMoneda', $("#cboMoneda").val());
            formData.append('estadoFormulario', @(ViewBag.esRenovacion == 2 ? 4 : 0));
            formData.append('idEstado', $("#cboEstados").val());
            formData.append('observacion', $("#txtObservacion").val());

             $.ajax({
                 url: "@Url.Action("Guardar", "Subscripcion")",
                 type: "POST",
                 data: formData,
                 processData: false,
                 contentType: false,
                 success: function (response) {
                     let message = idEditar > 0 ? "@( ViewBag.esRenovacion == 2 ? "Se relaizo la Renovacion de la Subscripcion" : "¡La Subscripcion se ha actualizado correctamente!" )" : "¡La Subscripcion se ha registrado correctamente!";
                     Swal.fire({
                         text: message,
                         icon: "success",
                         buttonsStyling: false,
                         confirmButtonText: "Listo",
                         customClass: { confirmButton: "btn btn-primary" },
                     }).then(function () {
                         window.location.href = '@Url.Action("Index", "Subscripcion")';
                     });
                 },
                 error: function (error) {
                     //console.error("Error al enviar el formulario");
                     // Mostrar mensaje de error
                     Swal.fire({
                         text: "Se produjo un error al enviar el formulario. Por favor, inténtalo de nuevo.",
                         icon: "error",
                         buttonsStyling: false,
                         confirmButtonText: "Ok",
                         customClass: { confirmButton: "btn btn-primary" },
                     });
                 },
             });
        }
        function convertirDDMMYYYYaDate(fechaStr) {
            const partes = fechaStr.split('/');
            const dia = parseInt(partes[0], 10);
            const mes = parseInt(partes[1], 10) - 1; // Los meses en JS van de 0 a 11
            const anio = parseInt(partes[2], 10);
            return new Date(anio, mes, dia);
        }
        function fechas(dias) {
            const fechaStr = "27/08/2025"; // <- asegúrate de este formato
            const partes = fechaStr.split('/');
            const dia = parseInt(partes[0], 10);
            const mes = parseInt(partes[1], 10) - 1;
            const anio = parseInt(partes[2], 10);

            const fecha = new Date(anio, mes, dia);
            fecha.setDate(fecha.getDate() + dias);

            console.log(fecha.toDateString());
        }
        function CambioFrecuencia() {
            var t = "#cboFrecuencia";
            var frecuencia = $(t).val();
            var nroTotal = $(t).find("option:selected").attr("data-numdias");
            var aviso1 = $(t).find("option:selected").attr("data-aviso1");
            var aviso2 = $(t).find("option:selected").attr("data-aviso2");
            var txtAviso = "";


            //AGREGAR INFORMACION DE FECHA VENCIMIENTO
            const fechaInicioStr = $("#kt_datepicker_fecha_ini").val();
            const fechaInicio = convertirDDMMYYYYaDate(fechaInicioStr);
            if (!isNaN(fechaInicio)) {
                // Calcular el máximo posible desde fecha de inicio (si deseas limitar a 30 días desde inicio)
                const maxDesdeInicio =fechaInicio;
                maxDesdeInicio.setDate(fechaInicio.getDate() + parseInt(nroTotal));
                initializeFlatpickr("#kt_datepicker_fecha_fin", maxDesdeInicio)
            } else {
                console.error("La fecha de inicio no es válida.");
            }


            if (frecuencia != -1) {
                $("#campo-hidden").removeClass("d-none")
                $("#txtAviso").val(aviso1)
                txtAviso = `Sugerencia aplicada: aviso ${aviso1} día(s) y segundo aviso ${aviso2} día(s) antes.`
            } else {
                $("#campo-hidden").addClass("d-none")
            }
            $("#xCampo").text(txtAviso)
        }

        $(document).ready(function () {
            $('#cboServicios').select2({
                width: '100%'
            });
            $('#cboClientes').select2({
                width: '100%'
            });
            $('#cboFrecuencia').select2({
                width: '100%'
            });
            $('#cboMoneda').select2({
                width: '100%'
            });
            $('#cboEstados').select2({
                width: '100%'
            });
            var hoy = new Date();
            initializeFlatpickr("#kt_datepicker_fecha_fin", null)
            @if (ViewBag.esEditar > 0) {
            var info = Model.ObtenerSubscripcion;
            <text>
            var informacion = @Html.Raw(JsonConvert.SerializeObject(info));
            idEditar = @ViewBag.esEditar;
            var fechaInicio = @ViewBag.esRenovacion == 2 ? informacion.fechaVcto : informacion.fechaInicio;
            var dataFecha = new Date(fechaInicio)
            $("#cboClientes").val(informacion.idCliente).trigger("change")
            initializeFlatpickr("#kt_datepicker_fecha_ini", dataFecha)
            $("#cboFrecuencia").val(informacion.idFrecuencia).trigger("change")
            $("#cboServicios").val(informacion.idServicio).trigger("change")
            $("#cboMoneda").val(informacion.idMoneda).trigger("change")
            $("#cboEstados").val(informacion.idEstado).trigger("change")
            $("#txtImporte").val(informacion.importe);
            $("#txtObservacion").val(informacion.observacion)
            </text>
            }
            else
            {
            <text>
            initializeFlatpickr("#kt_datepicker_fecha_ini", hoy)
            </text>
            }
        });



    </script>
}


