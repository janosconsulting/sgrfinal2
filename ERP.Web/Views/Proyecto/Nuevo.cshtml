                                        <div class="row mb-5 gx-1">
                                            <!--begin::Input group-->
                                            <!--begin::Label-->
                                            <label class="fs-5 fw-semibold mb-2"
                                                   for="kt_datepicker_fecha_fin">FECHA FIN:</label>
                                            <!--end::Label-->
                                            <!--begin::Input-->
                                            <input type="text"
                                                   id="kt_datepicker_fecha_fin"
                                                   class="form-control"
                                                   placeholder="Fecha" />
