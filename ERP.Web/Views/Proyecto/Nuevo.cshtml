</div>
<!--end::Content wrapper-->

@section Scripts {
    <script src="@Url.Content("~/Scripts/library.js?v=5.0")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/metronic/plugins/custom/formrepeater/formrepeater.bundle.js")"></script>
    <style>
        .select2-container {
            width: 100% !important;
        }

        /* Si quieres un mínimo ancho */
        #kt_estado_select + .select2-container {
            min-width: 300px;
        }
        
    </style>

    <script>

    $(document).ready(function () {
        $("#kt_datepicker_fecha_ini").flatpickr({
            dateFormat: 'd/m/Y',
            locale: spanishLocale,
            defaultDate: new Date(),
        });

        $("#kt_datepicker_fecha_fin").flatpickr({
            dateFormat: 'd/m/Y',
            locale: spanishLocale,
            minDate: "today",
            defaultDate: new Date(),
        });
               let estado = '@Model.proyecto.estadoProyecto';
               setTimeout(function () {
               if (estado) {
               $('#kt_estado_select').val(estado).trigger('change');
                } else {
              $('#kt_estado_select').val("1").trigger('change'); // valor por defecto REGISTRADO
                  }
               }, 100);
               });

    $('#kt_docs_repeater_basic').repeater({
        initEmpty: false,

        show: function () {
            var $newItem = $(this).slideDown();
            counter++;

            // Reemplaza el placeholder {{counter}} con el valor actual del contador
            $newItem.html($newItem.html().replace(/{{counter}}/g, counter));

            // Inicializa select2 y flatpickr en los nuevos elementos
            $newItem.find('[data-kt-repeater="select2"]').select2();
            $newItem.find('[data-kt-repeater="datepicker"]').flatpickr({
                dateFormat: 'd/m/Y',
                locale: spanishLocale
            });

            // Inicializa Dropzone
            initializeDropzone(counter);
        },

        hide: function (deleteElement) {
            $(this).slideUp(deleteElement);
        },

        ready: function (setIndexes) {
            // Recorre todos los items iniciales y reemplaza el placeholder {{counter}}
            $('[data-repeater-item]').each(function () {
                counter++;
                var $item = $(this);
                $item.html($item.html().replace(/{{counter}}/g, counter));
            });

            // Inicializa select2 y flatpickr para los elementos existentes
            $('[data-kt-repeater="select2"]').select2();
            $('[data-kt-repeater="datepicker"]').flatpickr({
                dateFormat: 'd/m/Y',
                locale: spanishLocale
            });

            // Inicializa Dropzone para los elementos existentes
            $('[data-repeater-item]').each(function () {
                initializeDropzone(counter);
            });
        }
    });


           let botonDesactivado = false;


                 function Validar() {
                        if ($("#txtNombres").val() == "") {
                          ShowMessage(0, "Debe ingresar el nombre");
                         return false;
                  }
                 // Verificar si se ha seleccionado un estato del proyecto
                 if ($("#kt_estado_select").val() == "") {
                       ShowMessage(0, "Debe seleccionar un estado del proyecto");
                       return false;
                       }
                      if (botonDesactivado) {
                        // El botón está desactivado, mostrar mensaje de advertencia
                        Swal.fire({
                           icon: 'warning',
                           title: 'Advertencia',
                           text: 'No se pueden guardar los datos ya que previamente el botón estaba desactivado',
                           confirmButtonText: 'OK'
                        });
                       return false;
                       }

                       return true;
                  }

           function Guardar() {
                     if (!Validar()) {
                         return false;
                        }
                // Obtener el índice seleccionado

                 var formData = new FormData();

                 formData.append('proyecto.idProyecto',@Model.proyecto.idProyecto);
                 formData.append('proyecto.nombre', $("#txtNombres").val());
                 formData.append('proyecto.idPersona', 1);
                 formData.append('proyecto.fechaInicio', $("#kt_datepicker_fecha_ini").val());
                 formData.append('proyecto.fechaFin', $("#kt_datepicker_fecha_fin").val());
                 formData.append('proyecto.fechaRegistro', $("#kt_datepicker_fecha").val());
                 formData.append('proyecto.estadoProyecto', parseInt($('#kt_estado_select').val()));
                 formData.append('proyecto.idEstado',1);

                   /* console.log(selectedIndex);
                  console.log("dato del select:");
                  console.log("Contenido de formData:");

                  for (let pair of formData.entries()) {
                  console.log(pair[0] + ": " + pair[1]);
                  }*/
                  //let psEditing = @*@Html.Raw(Json.Encode(Model.PsEditing)); /*@/ Obtener el valor de IsEditing desde el modelo
              $.ajax({
                    url: "@Url.Action("Guardar", "Proyecto")",
                    type: "POST",
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                            let idProyecto = formData.get("proyecto.idProyecto"); // Asegúrate que este campo exista
                            message = (idProyecto && parseInt(idProyecto) > 0)
                            ? "¡El Proyecto se ha editado correctamente!"
    :                      "¡El Proyecto se ha registrado correctamente!";

                    Swal.fire({
                         text: message,
                         icon: "success",
                         buttonsStyling: false,
                         confirmButtonText: "Listo",
                         customClass: { confirmButton: "btn btn-primary" },
                      }).then(function () {
                        window.location.href = '@Url.Action("Index", "Proyecto")';
                       });
                        },
                    error: function (error) {
                    Swal.fire({
                        text: "Se produjo un error al enviar el formulario. Por favor, inténtalo de nuevo.",
                        icon: "error",
                        buttonsStyling: false,
                        confirmButtonText: "Ok",
                        customClass: { confirmButton: "btn btn-primary" },
                    });
                },
             });

            }
               // Función para capitalizar la primera letra de cada palabra y permitir letras, números y espacios
                function filtrarYCapitalizar(input) {
                   // Obtener el valor actual del input
                   let valor = input.value;
                   // Convertir todo el texto a minúsculas
                   valor = valor.toLowerCase();
                   // Permitir solo letras, números y espacios
                   valor = valor.replace(/[^a-zA-Z0-9\s]/g, '');
                   // Capitalizar la primera letra de cada palabra
                   valor = valor.replace(/\b\w/g, function (char) {
                   return char.toUpperCase();
                   });
                     // Actualizar el valor del input
                   input.value = valor;
                }

    </script>
}
