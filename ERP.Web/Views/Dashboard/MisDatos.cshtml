@model Mantenimiento.Negocio.Poco.GestionarPersonaPoco
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar pt-7 pt-lg-10">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
            <!--begin::Toolbar wrapper-->
            <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center gap-1 me-3">
                    <!--begin::Title-->
                    <h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bold fs-3 m-0">Mi perfil</h1>
                    <!--end::Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0">
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">
                            <a href="@Url.Action("Index","Dashboard")" class="text-muted text-hover-primary">Home</a>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">Mi Perfil</li>
                        <!--end::Item-->
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
            </div>
            <!--end::Toolbar wrapper-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-fluid">
            <!--begin::Form-->
            <form id="kt_autor_form" class="form" action="#">
                <!--begin::Scroll-->
                <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_add_user_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_user_header" data-kt-scroll-wrappers="#kt_modal_add_user_scroll" data-kt-scroll-offset="300px">
                    <!--begin::Heading-->
                    <div class="pb-10 pb-lg-15">
                        <!--begin::Title-->
                        <h2 class="fw-bold text-dark">Información personal </h2>
                        <!--end::Title-->

                    </div>
                    <!--end::Heading-->
                    <!--begin::Input group-->
                    <div class="row g-9 mb-8">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <label class="required fs-6 fw-semibold mb-2">Tipo documento identidad</label>
                            @Html.DropDownListFor(m => m.Autor.idTipoIdentidad, new SelectList(Model.ListaDocumentoIdentidad, "idDocumentoIdentidad", "nombre"), new { @class = "form-select form-select-solid", name = "idTipoIdentidad" })
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <label class="required fs-6 fw-semibold mb-2">Nro. documento</label>
                            <!--begin::Input-->
                            <div class="position-relative d-flex align-items-center">
                                <!--begin::Input-->
                                <input type="text" id="txtNroIdentidad" name="txtNroIdentidad" value="@Model.Autor.nroIdentidad" class="form-control form-control-solid mb-3 mb-lg-0" />
                                <!--end::Input-->
                            </div>
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-5">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-5 fw-semibold mb-2">Nombres</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input type="text" class="form-control form-control-solid" placeholder="" id="txtNombres" name="txtNombres" value="@Model.Autor.nombres" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--end::Label-->
                            <label class="required fs-5 fw-semibold mb-2">Apellido paterno</label>
                            <!--end::Label-->
                            <!--end::Input-->
                            <input type="text" class="form-control form-control-solid" placeholder="" id="txtApellidoPaterno" name="txtApellidoPaterno" value="@Model.Autor.apellidoPaterno" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Input group-->
                    <div class="row mb-5">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-5 fw-semibold mb-2">Apellido materno</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input type="text" class="form-control form-control-solid" placeholder="" id="txtApellidoMaterno" name="txtApellidoMaterno" value="@Model.Autor.apellidoMaterno" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Wrapper-->
                            <div class="d-flex flex-stack">
                                <!--begin::Label-->
                                <div class="me-5">
                                    <!--begin::Label-->
                                    <label class="fs-5 fw-semibold">Es admin?</label>
                                    <!--end::Label-->
                                </div>
                                <!--end::Label-->
                                <!--begin::Switch-->
                                <label class="form-check form-switch form-check-custom form-check-solid">
                                    <!--begin::Input-->
                                    <input class="form-check-input" id="txtCboEsAlumno" name="txtCboEsAlumno" type="checkbox" />
                                    <!--end::Input-->
                                    <!--begin::Label-->
                                    <span class="form-check-label fw-semibold text-muted">Si</span>
                                    <!--end::Label-->
                                </label>
                                <!--end::Switch-->
                            </div>
                            <!--begin::Wrapper-->
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                    <!--begin::Heading-->
                    <div class="pb-10 pb-lg-15">
                        <!--begin::Title-->
                        <h2 class="fw-bold text-dark">Información de acceso </h2>
                        <!--end::Title-->

                    </div>
                    <!--end::Heading-->
                    <!--begin::Input group-->
                    <div class="row mb-5">
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--begin::Label-->
                            <label class="required fs-5 fw-semibold mb-2">Usuario</label>
                            <!--end::Label-->
                            <!--begin::Input-->
                            <input type="text" class="form-control form-control-solid" placeholder="" id="txtUsername" name="txtUsername" value="@Model.Usuario.username" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6 fv-row">
                            <!--end::Label-->
                            <label class="required fs-5 fw-semibold mb-2">Contraseña</label>
                            <!--end::Label-->
                            <!--end::Input-->
                            <input type="password" class="form-control form-control-solid" placeholder="" id="txtPassword" name="txtPassword" />
                            <!--end::Input-->
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Input group-->
                </div>
                <!--end::Scroll-->
                <!--begin::Actions-->
                <div class="text-center pt-15">
                    <a href="@Url.Action("Index","Home")" class="btn btn-light-twitter me-3">Volver a inicio</a>
                    <button type="submit" id="kt_docs_formvalidation_text_submit" class="btn btn-primary" data-kt-autors-modal-action="submit">
                        <span class="indicator-label">Guardar</span>
                        <span class="indicator-progress">
                            Espere un momento...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                </div>
                <!--end::Actions-->
            </form>
            <!--end::Form-->
        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->
</div>
<!--end::Content wrapper-->
@section Scripts{

    <script>

        // Define form element
        const form = document.getElementById('kt_autor_form');

        // Init form validation rules. For more info check the FormValidation plugin's official documentation:https://formvalidation.io/
        var validator = FormValidation.formValidation(
            form,
            {
                fields: {
                    'txtNombres': {
                        validators: {
                            notEmpty: {
                                message: 'El titulo es obligatorio'
                            }
                        }
                    },
                    'txtNroIdentidad': {
                        validators: {
                            notEmpty: {
                                message: 'El nro de identidad es obligatorio'
                            }
                        }
                    },
                    'txtApellidoPaterno': {
                        validators: {
                            notEmpty: {
                                message: 'El apellido paterno es obligatorio'
                            }
                        }
                    },
                    'txtApellidoMaterno': {
                        validators: {
                            notEmpty: {
                                message: 'El apellido materno es obligatorio'
                            }
                        }
                    },
                    'txtUsername': {
                        validators: {
                            notEmpty: {
                                message: 'El usuario es obligatorio'
                            }
                        }
                    },
                    'txtPassword': {
                        validators: {
                            notEmpty: {
                                message: 'Debe ingresar su contraseña'
                            }
                        }
                    }
                },

                plugins: {
                    trigger: new FormValidation.plugins.Trigger(),
                    bootstrap: new FormValidation.plugins.Bootstrap5({
                        rowSelector: '.fv-row',
                        eleInvalidClass: '',
                        eleValidClass: ''
                    })
                }
            }
        );

        // Submit button handler
        const submitButton = document.getElementById('kt_docs_formvalidation_text_submit');
        submitButton.addEventListener('click', function (e) {
            // Prevent default button action
            e.preventDefault();

            // Validate form before submit
            if (validator) {
                validator.validate().then(function (status) {
                    console.log('validated!');

                    if (status == 'Valid') {
                        // Show loading indication
                        submitButton.setAttribute('data-kt-indicator', 'on');

                        // Disable button to avoid multiple click
                        submitButton.disabled = true;

                        // Simulate form submission. For more info check the plugin's official documentation: https://sweetalert2.github.io/
                        setTimeout(function () {
                            // Remove loading indication
                            submitButton.removeAttribute('data-kt-indicator');

                            // Enable button
                            submitButton.disabled = false;

                            const formData = new FormData(form);
                            const formDataEnvio = new FormData();
                            formDataEnvio.append("Autor.idAutor", @Model.Autor.idAutor);
                            formDataEnvio.append("Autor.idTipoIdentidad", formData.get('Autor.idTipoIdentidad'));
                            formDataEnvio.append("Autor.nroIdentidad", formData.get('txtNroIdentidad'));
                            formDataEnvio.append("Autor.nombres", formData.get('txtNombres'));
                            formDataEnvio.append("Autor.apellidoPaterno", formData.get('txtApellidoPaterno'));
                            formDataEnvio.append("Autor.apellidoMaterno", formData.get('txtApellidoMaterno'));
                            formDataEnvio.append("Autor.esAlumno", $('#txtCboEsAlumno').is(":checked") ? 1 : 0);
                            formDataEnvio.append("Autor.idEstado", 1);

                            formDataEnvio.append("Usuario.username", formData.get('txtUsername'));
                            formDataEnvio.append("Usuario.contrasenia", formData.get('txtPassword'));

                            // Realizar la solicitud Ajax
                            $.ajax({
                                url: "@Url.Action("Registrar","Autor")",
                                type: "POST",
                                data: formDataEnvio,
                                processData: false,
                                contentType: false,
                                success: function (response) {
                                    ShowMessage(response.idResultado, response.mensaje, function () {
                                        window.location.reload();

                                    });

                                },
                                error: function (error) {
                                    console.error("Error al enviar el formulario");
                                    console.log(error);

                                    // Mostrar mensaje de error
                                    Swal.fire({
                                        text: "Se produjo un error al enviar el formulario. Por favor, inténtalo de nuevo.",
                                        icon: "error",
                                        buttonsStyling: false,
                                        confirmButtonText: "Ok, entendido",
                                        customClass: { confirmButton: "btn btn-primary" },
                                    });
                                },
                            });


                        }, 2000);
                    }
                });
            }
        });
        $(document).ready(function () {

            @if(Model.Autor.esAlumno == 1)
            {
                <text>
            $("#txtCboEsAlumno").prop("checked", true);
                </text>
            }
        });
    </script>

}
