            flex-direction: column;
            position: relative;
        }

            .modulo-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 14px 25px rgba(0, 0, 0, 0.12);
            }

        .modulo-icon {
            font-size: 2.2rem;
            color: #0d6efd;
            margin-bottom: 0.8rem;
        }

        .modulo-title {
            font-weight: 700;
            font-size: 1.15rem;
            color: #0d47a1;
            margin-bottom: 0.5rem;
        }

        .modulo-desc {
            font-size: 0.95rem;
            color: #444;
            line-height: 1.5;
            flex-grow: 1;
        }

        .modulo-list {
            margin-top: 0.8rem;
            color: #222;
            padding-left: 1.2rem;
        }

            .modulo-list li {
                margin-bottom: 0.4rem;
            }

        .modulo-tag {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: #0d6efd;
            color: #fff;
            padding: 0.2rem 0.6rem;
            border-radius: 6px;
            font-size: 0.75rem;
        }

        .modulo-button {
            margin-top: 1rem;
            padding: 0.4rem 1rem;
            background-color: #0d6efd;
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9rem;
            align-self: start;
        }

            .modulo-button:hover {
                background-color: #084dc2;
            }

        .btn-mas {
            margin-top: 1rem;
            align-self: flex-start;
            background: #007bff;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            text-decoration: none;
            cursor: pointer;
            transition: background 0.3s;
        }

            .btn-mas:hover {
                background: #0056b3;
            }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow-y: auto;
            background-color: rgba(0, 0, 0, 0.6);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            margin: 5% auto;
            padding: 2rem;
            border-radius: 12px;
            width: 90%;
            max-width: 700px;
            position: relative;
        }

        .close {
            position: absolute;
            right: 20px;
            top: 15px;
            font-size: 30px;
            font-weight: bold;
            color: #333;
            cursor: pointer;
        }

        .modal h3 {
            margin-top: 0;
            color: #003366;
        }

        .modal ul {
            list-style: none;
            padding-left: 0;
        }

            .modal ul li::before {
                content: "✅ ";
                margin-right: 5px;
            }

        iframe, video {
            width: 100%;
            border-radius: 8px;
            margin-top: 1rem;
        }

        body {
            background-attachment: fixed;
            font-family: 'Segoe UI', sans-serif;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: #003366;
            margin-top: 3rem;
            text-align: center;
        }

        .module-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .module-card {
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s, box-shadow 0.3s;
            overflow: hidden;
        }

            .module-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
            }

        .module-icon {
            font-size: 2.5rem;
            color: #0d6efd;
            margin-bottom: 1rem;
        }

        .module-title {
            font-weight: 600;
            font-size: 1.3rem;
            color: #0d6efd;
            margin-bottom: 0.5rem;
        }

        .intro-paragraph {
            text-align: center;
            max-width: 800px;
            margin: 0 auto 2rem;
        }

        .list-group-item strong {
            color: #0d6efd;
        }

        .screenshot-gallery {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
            margin-top: 1rem;
        }

        .screenshot {
            max-width: 300px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

            .screenshot:hover {
                transform: scale(1.05);
            }

        .section-wrapper {
            padding: 4rem 1rem;
            border-top: 1px solid #ddd;
        }

            .section-wrapper:nth-child(even) {
                background-color: #f7f9fc; /* Fondo suave alternado */
            }

        .section-title {
            margin-bottom: 2rem;
            text-align: center;
            font-weight: 700;
            font-size: 2rem;
            color: #003366;
        }

            .section-title::before {
                content: '';
                display: block;
                width: 80px;
                height: 4px;
                margin: 0 auto 1rem;
                background: linear-gradient(to right, #0d6efd, #00bcd4);
                border-radius: 2px;
            }

        .section-header {
            background: linear-gradient(to right, #0d6efd, #00bcd4);
            color: white;
            padding: 3rem 1rem;
            text-align: center;
        }

            .section-header h2 {
                margin: 0;
                font-size: 2.5rem;
            }

        .plans-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
            padding: 3rem 1rem;
            max-width: 1200px;
            margin: auto;
        }

        .plan-card {
            background-color: white;
            border-radius: 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            padding: 2rem;
          
            text-align: center;
            transition: transform 0.3s;
        }

            .plan-card:hover {
                transform: translateY(-5px);
            }

        .plan-title {
            font-size: 1.5rem;
            color: #003366;
            margin-bottom: 0.5rem;
        }

        .plan-price {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: #222;
        }

        .plan-features {
            text-align: left;
            font-size: 0.95rem;
            line-height: 1.6;
            padding-left: 1rem;
            margin-bottom: 1.5rem;
            color: #555;
        }

            .plan-features li {
                list-style: disc;
            }

        .cta-button {
            display: inline-block;
            background-color: #0d6efd;
            color: white;
            padding: 0.6rem 1.5rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }

            .cta-button:hover {
                background-color: #084298;
            }

        @@media (max-width: 768px) {
            .plans-container {
                flex-direction: column;
                align-items: center;
            }
        }

        :root {
            --brand: #2563eb;
            --brand-600: #1d4ed8;
            --ink: #0f172a;
            --muted: #475569;
            --bg: #f8fafc;
            --card: #fff;
            --line: #e2e8f0;
            --ok: #16a34a;
            --warn: #eab308;
            --danger: #ef4444;
            --shadow: 0 6px 18px rgba(2,6,23,.08);
            --radius: 16px;
        }

        * {
            box-sizing: border-box
        }

        body {
            margin: 0;
            font-family: ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto;
            color: var(--ink);
            background: var(--bg)
        }

        .wrap {
            max-width: 1200px;
            margin: auto;
            padding: 28px
        }

        .header {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 22px
        }

        .title {
            font-size: 24px;
            font-weight: 800
        }

        .grid {
            display: grid;
            gap: 18px;
            grid-template-columns: repeat(12,1fr)
        }

        .col-3 {
            grid-column: span 3
        }

        @@media (max-width:1024px) {
            .col-3 {
                grid-column: span 6
            }
        }

        @@media (max-width:640px) {
            .col-3 {
                grid-column: span 12
            }
        }

        .card {
            background: var(--card);
            border: 1px solid var(--line);
            border-radius: var(--radius);
            padding: 22px;
            display: flex;
            flex-direction: column;
            gap: 14px;
            box-shadow: var(--shadow);
            transition: transform .18s, box-shadow .18s,border-color .18s
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 22px rgba(2,6,23,.12)
            }

        .card-head {
            display: flex;
            align-items: center;
            gap: 12px;
            justify-content: space-between
        }

        .left {
            display: flex;
            align-items: center;
            gap: 12px
        }

        .icon {
            width: 42px;
            height: 42px;
            border-radius: 12px;
            display: grid;
            place-items: center;
            background: rgba(37,99,235,.08);
            color: var(--brand);
            border: 1px solid rgba(37,99,235,.18)
        }

        .name {
            font-weight: 800
        }

        .desc {
            color: var(--muted);
            line-height: 1.55
        }

        .foot {
            margin-top: auto;
            display: flex;
            gap: 10px
        }

        .btn {
            appearance: none;
            border: 1px solid var(--brand);
            background: var(--brand);
            color: #fff;
            font-weight: 700;
            padding: 10px 14px;
            border-radius: 12px;
            cursor: pointer;
            transition: filter .15s,transform .02s
        }

            .btn:hover {
                filter: brightness(1.03)
            }

            .btn:active {
                transform: translateY(1px)
            }

        .btn--ghost {
            background: transparent;
            color: var(--brand)
        }

        /* Overlay & Drawer */
        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(15,23,42,.45);
            opacity: 0;
            pointer-events: none;
            transition: opacity .2s ease
        }

            .overlay.show {
                opacity: 1;
                pointer-events: auto
            }

        .drawer {
            position: fixed;
            top: 0;
            right: 0;
            height: 100vh;
            width: min(600px,100%);
            background: var(--card);
            border-left: 1px solid var(--line);
            box-shadow: -12px 0 24px rgba(2,6,23,.18);
            transform: translateX(100%);
            transition: transform .28s cubic-bezier(.4,0,.2,1);
            display: flex;
            flex-direction: column
        }

            .drawer.show {
                transform: translateX(0);
                z-index: 10000 !important
            }

        .drawer-header {
            display: flex;
            align-items: center;
            gap: 12px;
            justify-content: space-between;
            padding: 18px 20px;
            border-bottom: 1px solid var(--line)
        }

        .drawer-title {
            font-size: 18px;
            font-weight: 800
        }

        .drawer-body {
            display: flex;
            flex-direction: column;
            height: 100%
        }

        /* Tabs */
        .tabs {
            display: flex;
            gap: 6px;
            padding: 10px 10px 0;
            border-bottom: 1px solid var(--line);
            overflow: auto
        }

        .tab {
            padding: 10px 12px;
            border-radius: 10px 10px 0 0;
            cursor: pointer;
            font-weight: 700;
            color: #334155;
            white-space: nowrap
        }

            .tab.active {
                background: #eef2ff;
                color: #1e3a8a
            }

        .panel {
            display: none;
            padding: 14px 18px;
            overflow: auto
        }

            .panel.active {
                display: block
            }

        /* Common components */
        .chips {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            margin: 6px 0 10px
        }

        .chip {
            display: inline-flex;
            gap: 6px;
            align-items: center;
            border: 1px solid var(--line);
            padding: 6px 10px;
            border-radius: 999px;
            font-size: 12px;
            background: #f1f5f9
        }

        .kpis {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            gap: 10px;
            margin: 8px 0
        }

        .kpi {
            background: #f8fafc;
            border: 1px solid var(--line);
            border-radius: 12px;
            padding: 10px
        }

            .kpi .n {
                font-size: 20px;
                font-weight: 800
            }

        .list {
            width: 100%;
            border-collapse: collapse
        }

            .list th, .list td {
                padding: 8px 10px;
                border-bottom: 1px solid var(--line);
                text-align: left;
                font-size: 14px
            }

        .status {
            font-weight: 700;
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 999px;
            display: inline-block
        }

        .s-open {
            background: #fef9c3;
            color: #854d0e
        }

        .s-sent {
            background: #dbeafe;
            color: #1e40af
        }

        .s-partial {
            background: #fce7f3;
            color: #9d174d
        }

        .s-closed {
            background: #dcfce7;
            color: #14532d
        }

        .alerts {
            display: grid;
            gap: 8px
        }

        .alert {
            display: flex;
            gap: 10px;
            align-items: flex-start;
            border: 1px solid var(--line);
            border-left: 4px solid var(--danger);
            border-radius: 10px;
            background: #fff1f2;
            padding: 10px
        }

        .providers {
            display: grid;
            gap: 8px
        }

        .prov {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid var(--line);
            border-radius: 10px;
            padding: 10px
        }

        .badge {
            font-size: 12px;
            background: #e2e8f0;
            border-radius: 999px;
            padding: 4px 8px
        }

        .actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            margin-top: 8px
        }

            .actions .btn {
                border-radius: 10px;
                padding: 8px 12px
            }

        .close {
            background: transparent;
            border: 0;
            font-size: 22px;
            cursor: pointer;
            line-height: 1
        }

        /* Videos */
        .player {
            display: none;
            aspect-ratio: 16/9;
            width: 100%;
            border: 1px solid var(--line);
            border-radius: 12px;
            overflow: hidden;
            background: #000;
            margin-bottom: 12px
        }

            .player.show {
                display: block
            }

        .video-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px
        }

        @@media (max-width:520px) {
            .video-grid {
                grid-template-columns: 1fr
            }
        }

        .vcard {
            display: flex;
            gap: 10px;
            border: 1px solid var(--line);
            border-radius: 12px;
            overflow: hidden;
            background: #fff
        }

        .vthumb {
            width: 120px;
            height: 72px;
            object-fit: cover;
            background: #cbd5e1
        }

        .vmeta {
            padding: 8px 8px 10px;
            display: flex;
            flex-direction: column;
            gap: 6px
        }

        .vtitle {
            font-size: 14px;
            font-weight: 700
        }

        .vdesc {
            font-size: 12px;
            color: #475569;
            line-height: 1.4
        }

        .vbtn {
            align-self: flex-start
        }

        .section h4 {
            margin: 0 0 8px;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: .6px;
            color: #334155;
        }

        .section {
            margin: 14px 0;
        }

        /* Características numeradas */
        .featuresN {
            display: grid;
            gap: 18px
        }

        .featN {
            display: grid;
            grid-template-columns: 32px 36px 1fr;
            gap: 12px;
            align-items: start
        }

        .num {
            color: var(--accent);
            font-weight: 700;
            line-height: 1;
            margin-top: 6px
        }

        .ficon {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            border: 1px solid #fecaca;
            background: #ffe4e6;
            display: grid;
            place-items: center;
            color: var(--accent);
            font-size: 18px
        }

        .ftitle {
            font-size: 18px;
            font-weight: 800;
            margin: 0
        }

        .fdesc {
            margin: .25rem 0 0;
            color: var(--muted);
            line-height: 1.55
        }

        @@media(max-width:520px) {
            .featN {
                grid-template-columns: 24px 32px 1fr
            }

            .ftitle {
                font-size: 16px
            }
        }


        .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 800;
            color: var(--azul)
        }

            .brand img {
                height: 34px
            }

        /* HERO layout */
        .hero {
            max-width: 1200px;
            margin: 24px auto;
            padding: 0 16px;
            position: relative;
        }
            /* decor suave */
            .hero::before {
                content: "";
                position: absolute;
                inset: -80px -40px auto auto;
                z-index: -1;
                width: 720px;
                height: 720px;
                border-radius: 50%;
                background: radial-gradient(closest-side, #e8f0ff, transparent 66%);
                filter: blur(6px);
            }

        .grid {
            display: grid;
            grid-template-columns: 1.1fr 0.9fr;
            gap: 28px;
            align-items: center;
        }

        /* Columna izquierda */
        .left h1 {
            font-size: clamp(30px, 5vw, 56px);
            line-height: 1.05;
            margin: 0 0 8px;
        }

            .left h1 .accent {
                color: #0b62ff
            }

        .left p {
            color: var(--muted);
            margin: 4px 0 18px;
            max-width: 56ch
        }

        .hero-media {
            margin-top: 8px;
            position: relative;
        }

            .hero-media img {
                width: 100%;
                height: auto;
                display: block;
                border-radius: 18px;
                box-shadow: var(--shadow);
                background: #fff;
            }

        /* Columna derecha: formulario tarjeta */
        .form-card {
            background: var(--card);
            border: 1px solid var(--borda);
            border-radius: 18px;
            padding: 22px;
            box-shadow: var(--shadow);
        }

            .form-card h3 {
                margin: 0 0 6px;
                font-size: clamp(20px,2.2vw,28px);
            }

        .form-sub {
            color: var(--muted);
            margin: 0 0 16px;
            font-size: 14px;
        }

        .row {
            
            grid-template-columns: 1fr 1fr;
           
        }

        .field {
            position: relative;
        }

            .field i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: #8a94a7;
            }

        input, textarea, select {
            width: 100%;
            border: 1px solid #cfd6e6;
            background: #fff;
            color: var(--ink);
            border-radius: 12px;
            padding: 12px 12px 12px 36px;
            font-size: 14px;
            outline: none;
            transition: border-color .2s, box-shadow .2s;
        }

        textarea {
            padding-left: 12px;
        }

            input:focus, textarea:focus, select:focus {
                border-color: var(--azul2);
                box-shadow: 0 0 0 4px rgba(37,99,235,.12);
            }

        .trust {
            margin-top: 12px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 12px;
            color: #0f4b8a;
            background: #eaf3ff;
            border: 1px solid #d7e7ff;
            border-radius: 12px;
            padding: 10px 12px;
        }

            .trust i {
                color: #22c55e;
            }

        /* Responsive */
        @@media (max-width: 992px) {
            .grid {
                grid-template-columns: 1fr;
            }

            .form-card {
                order: -1;
            }
        }

