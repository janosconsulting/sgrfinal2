            max-width: 1200px;
            margin: auto;
            padding: 3rem 1rem;
            font-family: 'Segoe UI', sans-serif;
        }

        .modulos-title {
            text-align: center;
            font-size: 2rem;
            font-weight: 800;
            color: #0b2b61;
