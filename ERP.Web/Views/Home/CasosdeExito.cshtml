@model List<sp_ObtenerCasosExito>
@using Mantenimiento.Datos.Entidades

<!DOCTYPE html>
<html lang="en">
<!--<< Header Area >>-->
<!-- Mirrored from gramentheme.com/html/infotek/about.html by HTTrack Website Copier/3.x [XR&CO'2014], Wed, 12 Jun 2024 13:43:11 GMT -->

<body>
    <div class="breadcrumb-wrapper bg-cover" style="background-image: url('@Url.Content("~/Content/theme/assets/img/breadcrumb.jpg")');">
        <div class="border-shape">
            <img src="@Url.Content("~/Content/theme/assets/img/element.png")" alt="shape-img">
        </div>
        <div class="line-shape">
            <img src="@Url.Content("~/Content/theme/assets/img/line-element.png")" alt="shape-img">
        </div>
        <div class="container">
            <div class="page-heading">
                <h1 class="wow fadeInUp" data-wow-delay=".3s">Casos de Éxito</h1>
                <ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".5s">
                    <li>
                        <a href="index.html">
                            Home
                        </a>
                    </li>
                    <li>
                        <i class="fas fa-chevron-right"></i>
                    </li>
                    <li>
                        Casos de Éxito
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container bg-white rounded shadow-sm px-4 py-4 mb-5 mx-auto">       
    </div>

    <section class="section bg-light py-5">
        <div class="container">
            <link rel="stylesheet" href="@Url.Content("~/Scripts/assets/css/styleCodetus.css")" />
            <h2 class="text-center text-primary fw-bold mb-4">Casos de Éxito</h2>
            <p class="text-center text-muted mb-5">Explora algunos de los proyectos exitosos que hemos desarrollado.</p>

            <div class="row g-4">
                @foreach (var item in Model)
                {
                    var imagenRuta = Url.Content("~/Uploads/Files/CasosExito/" + item.nombreArchivo);

                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 rounded-4">
                            <img src="@imagenRuta" class="card-img-top rounded-top" style="height: 230px; object-fit: cover;" alt="@item.Titulo" />
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-primary">@item.Titulo</h5>
                                    <p class="card-text text-muted">@item.Descripcion</p>
                                </div>
                                <a href="@Url.Action("ProyectoDetalle", "Home", new { id = item.idCaso })" class="btn btn-outline-primary btn-sm mt-3">
                                    Ver más
                                </a>
                            </div>
                        </div>
                    </div>                   
                }
            </div>
        </div>
    </section>

</body>

