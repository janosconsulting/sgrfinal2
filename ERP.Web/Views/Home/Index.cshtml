<script>
    const wrapper = document.getElementById("snapWrapper");
    const progress = document.getElementById("snapProgress");
    const btnPrev = document.getElementById("snapPrev");
    const btnNext = document.getElementById("snapNext");

    let indexSnap = 0;
    let snapInterval = null;

    /* =========================
       RENDER
    ========================= */
    function renderSnap() {
        wrapper.innerHTML = "";
        proyectosSlider.forEach(p => {
            wrapper.innerHTML += `
      <div class="snap-card">
        <h5 class="snap-title">
          <i class="fas ${p.icono} text-primary"></i> ${p.titulo}
        </h5>

        <div class="snap-badges">
          <span class="snap-badge">${p.plan}</span>
          <span class="snap-badge">${p.estado}</span>
        </div>

        <p class="snap-desc">${p.descripcion}</p>

        <div class="snap-mods">
          ${p.modulos.map(m => `<span>${m}</span>`).join("")}
        </div>
      </div>
    `;
        });
    }

    /* =========================
       NAVEGACIÓN HORIZONTAL (SIN SCROLL VERTICAL)
    ========================= */
    function goToSnap(i) {
        const cards = wrapper.children;
        if (!cards.length) return;

        indexSnap = (i + cards.length) % cards.length;

        const card = cards[indexSnap];
        const left =
            card.offsetLeft -
            (wrapper.clientWidth / 2) +
            (card.clientWidth / 2);

        wrapper.scrollTo({
            left,
            behavior: "smooth"
        });

        progress.style.width = ((indexSnap + 1) / cards.length) * 100 + "%";
    }

    function nextSnap() { goToSnap(indexSnap + 1); }
    function prevSnap() { goToSnap(indexSnap - 1); }

    /* =========================
       BOTONES
    ========================= */
    btnNext.addEventListener("click", () => {
        nextSnap();
        restartAuto();
    });

    btnPrev.addEventListener("click", () => {
        prevSnap();
        restartAuto();
    });

    /* =========================
       AUTOPLAY
    ========================= */
    function startAuto() {
        snapInterval = setInterval(nextSnap, 4200);
    }
    function stopAuto() {
        if (snapInterval) clearInterval(snapInterval);
    }
    function restartAuto() {
        stopAuto();
        startAuto();
    }

    /* =========================
       DRAG CON MOUSE / TOUCH
    ========================= */
    let isDown = false;
    let startX;
    let scrollLeftStart;

    wrapper.addEventListener("mousedown", (e) => {
        isDown = true;
        wrapper.classList.add("dragging");
        startX = e.pageX - wrapper.offsetLeft;
        scrollLeftStart = wrapper.scrollLeft;
        stopAuto();
    });

    wrapper.addEventListener("mouseleave", () => {
        isDown = false;
        wrapper.classList.remove("dragging");
        startAuto();
    });

    wrapper.addEventListener("mouseup", () => {
        isDown = false;
        wrapper.classList.remove("dragging");
        startAuto();
    });

    wrapper.addEventListener("mousemove", (e) => {
        if (!isDown) return;
        e.preventDefault();

        const x = e.pageX - wrapper.offsetLeft;
        const walk = (x - startX) * 2; // velocidad del drag
        wrapper.scrollLeft = scrollLeftStart - walk;
    });

    /* TOUCH (mobile) */
    wrapper.addEventListener("touchstart", () => {
        stopAuto();
    });
    wrapper.addEventListener("touchend", () => {
        startAuto();
    });

    /* =========================
       INIT
    ========================= */
    renderSnap();
    goToSnap(0);
    startAuto();

    document.addEventListener("DOMContentLoaded", function () {
        var modal = document.getElementById('modalSector');
        if (!modal) return;

        modal.addEventListener('show.bs.modal', function (event) {
            var btn = event.relatedTarget;
            if (!btn) return;

            var sector = btn.getAttribute('data-sector') || 'Sector';
            var desc = btn.getAttribute('data-desc') || '';
            var link = btn.getAttribute('data-link') || '#';

            document.getElementById('modalSectorTitle').textContent = sector;
            document.getElementById('modalSectorDesc').textContent = desc;
            document.getElementById('modalSectorExplore').setAttribute('href', link);
        });

        const tabs = document.querySelectorAll(".codetus-tab");
        const panels = document.querySelectorAll(".codetus-panel");

        tabs.forEach(tab => {
            tab.addEventListener("click", function () {

                // activar tab
                tabs.forEach(t => t.classList.remove("active"));
                this.classList.add("active");

                // mostrar panel
                const target = this.getAttribute("data-target");
                panels.forEach(p => p.classList.remove("show"));
                document.getElementById("panel-" + target).classList.add("show");
            });
        });
    });

    const clientesSwiper = new Swiper(".clientesSwiper", {
        loop: true,
        speed: 650,
        spaceBetween: 18,
        grabCursor: true,        // cursor de "agarre"
        autoplay: {
            delay: 2200,
            disableOnInteraction: false
        },
        pagination: {
            el: ".clientesSwiper .swiper-pagination",
            clickable: true
        },
        navigation: {
            nextEl: ".clientes-next",
            prevEl: ".clientes-prev"
        },
        breakpoints: {
            0: { slidesPerView: 1.2 },
            576: { slidesPerView: 2.2 },
            768: { slidesPerView: 3 },
            992: { slidesPerView: 4 },
            1200: { slidesPerView: 5 }
        }
    });
</script>



