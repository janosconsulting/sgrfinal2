@{
    ViewBag.Title = "Clientes";
    Layout = null; // O quita esta línea si estás usando Layout
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Clientes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .btn-filter.active {
            background-color: #007bff;
            color: white;
        }

        .card-img-top {
            height: 180px;
            object-fit: contain;
            background-color: #f9f9f9;
        }

        .section-title {
            margin-top: 60px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <!-- Tu encabezado original -->
    <div class="breadcrumb-wrapper bg-cover" style="background-image: url('@Url.Content("~/Content/theme/assets/img/breadcrumb.jpg")');">
        <div class="border-shape">
            <img src="@Url.Content("~/Content/theme/assets/img/element.png")" alt="shape-img">
        </div>
        <div class="line-shape">
            <img src="@Url.Content("~/Content/theme/assets/img/line-element.png")" alt="shape-img">
        </div>
        <div class="container">
            <div class="page-heading">
                <h1 class="wow fadeInUp" data-wow-delay=".3s">Clientes</h1>
                <ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".5s">
                    <li><a href="/">Home</a></li>
                    <li><i class="fas fa-chevron-right"></i></li>
                    <li>Clientes</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Filtros y galería -->
    <div class="container">
        <div class="filtro-titulo text-center py-3 mb-4">
            <h2 class="text-white mb-0">Filtrar por rubro</h2>
        </div>

        <div class="d-flex flex-wrap justify-content-center mb-4">
            <button class="btn btn-outline-primary m-1 btn-filter active" onclick="filtrar('todos')">Todos</button>
            <button class="btn btn-outline-primary m-1 btn-filter" onclick="filtrar('veterinaria')">Veterinaria</button>
            <button class="btn btn-outline-primary m-1 btn-filter" onclick="filtrar('salud')">Salud</button>
            <button class="btn btn-outline-primary m-1 btn-filter" onclick="filtrar('abarrotes')">Abarrotes</button>
        </div>

        <div class="row">
            <!-- Cliente: Reflejos (Salud) -->
            <div class="col-md-4 mb-4 rubro salud">
                <div class="card shadow-sm">
                    <img src="/Content/themes/codetus/images/client/logoReflejos.png" class="card-img-top" alt="Reflejos">
                    <div class="card-body text-center">
                        <h5>Clínica Reflejos</h5>
                    </div>
                </div>
            </div>

            <!-- Cliente: PetVet (Veterinaria) -->
            <div class="col-md-4 mb-4 rubro veterinaria">
                <div class="card shadow-sm">
                    <img src="/Content/themes/codetus/images/client/logoPetVet.png" class="card-img-top" alt="PetVet">
                    <div class="card-body text-center">
                        <h5>Veterinaria PetVet</h5>
                    </div>
                </div>
            </div>

            <!-- Cliente: Don Pepe (Abarrotes) -->
            <div class="col-md-4 mb-4 rubro abarrotes">
                <div class="card shadow-sm">
                    <img src="/Content/themes/codetus/images/client/logoDonPepe.png" class="card-img-top" alt="Don Pepe">
                    <div class="card-body text-center">
                        <h5>Tienda Don Pepe</h5>
                    </div>
                </div>
            </div>

            <!-- Agrega más aquí con su clase de rubro -->
        </div>
    </div>

    <script>
        function filtrar(rubro) {
            const items = document.querySelectorAll('.rubro');
            items.forEach(el => {
                el.style.display = (rubro === 'todos' || el.classList.contains(rubro)) ? 'block' : 'none';
            });

            document.querySelectorAll('.btn-filter').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }
    </script>

</body>
</html>

